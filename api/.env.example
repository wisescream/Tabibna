# API
PORT=4000
NODE_ENV=development

# Database
# Local dev with Docker uses host port 3307 mapped to container 3306
DATABASE_URL="mysql://root:rootpass@localhost:3307/tabibna_dev"

# JWT (RS256)
# Provide PEM-formatted keys, or mount as secrets in Docker
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----\n"
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# Windows PowerShell tip: set a one-time env var for the current session
# $env:PORT = '4001'

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# S3 (optional)
S3_ENDPOINT=
S3_BUCKET=
S3_KEY=
S3_SECRET=

# SMS Provider (optional)
SMS_PROVIDER_API_KEY=

# Payment Provider (optional)
PAYMENT_PROVIDER_KEY=
PAYMENT_PROVIDER_SECRET=

# Webhook secrets (HMAC)
PAYMENT_WEBHOOK_SECRET=
SMS_WEBHOOK_SECRET=

# Observability
SENTRY_DSN=
